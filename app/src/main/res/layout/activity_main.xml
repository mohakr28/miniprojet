<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- Header or Title for View Mode -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select View Mode"
        android:textSize="18sp"
        android:textColor="#333"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp"/>

    <!-- RadioGroup for selecting view mode (ListView or GridView) -->
    <RadioGroup
        android:id="@+id/viewModeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:background="#ffffff"
        android:elevation="2dp"
        android:gravity="center">

        <!-- RadioButton for ListView -->
        <RadioButton
            android:id="@+id/radioListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List View"
            android:textSize="16sp"
            android:padding="10dp"
            android:checked="true" 
        android:textColor="#000"/>

        <!-- RadioButton for GridView -->
        <RadioButton
            android:id="@+id/radioGridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grid View"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="#000"/>
    </RadioGroup>

    <!-- Search EditText -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search employees"
        android:inputType="text"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:textColor="#333"/>

    <!-- RecyclerView for displaying employee data -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp" />

    <!-- Add Employee Button -->
    <Button
        android:id="@+id/addEmployeeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Employee"
        android:textColor="#fff"
        android:background="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>
</LinearLayout>
